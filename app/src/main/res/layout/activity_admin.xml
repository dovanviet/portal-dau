<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminActivity">

    <Button
        android:textColor="@color/White"
        android:layout_centerInParent="true"
        android:text="Thêm Lịch Học"
        android:id="@+id/btnAddSchedule"
        android:layout_width="250dp"
        android:background="@drawable/bg_corner_login"
        android:layout_height="wrap_content"/>

    <Button
        android:textColor="@color/White"
        android:background="@drawable/bg_corner_login"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnAddSchedule"
        android:text="Thêm Điểm"
        android:id="@+id/btnAddPoint"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <Button
        android:textColor="@color/White"
        android:background="@drawable/bg_corner_login"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnAddPoint"
        android:text="Thêm Chương Trình Đào Tạo"
        android:id="@+id/btnAddProgram"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>